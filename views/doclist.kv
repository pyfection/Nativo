<DocListView>:
    toolbar: toolbar
    documents: documents

    orientation: "vertical"

    NativoToolbar:
        id: toolbar
        title: "Documents"
        left_action_items: [['menu', lambda x: root.nav_drawer.set_state("open")]]
        right_action_items: [['plus-box', lambda x: app.edit_doc(), 'Add Document']]

    MDList:
        id: documents

    Widget:


<DocLine>:
    size_hint_y: None
    height: 50

    MDIconButton:
        size_hint_x: None
        width: 50
        icon: "book-open-variant"
        on_release: app.view_doc(root.uid)

    MDIconButton:
        size_hint_x: None
        width: 50
        icon: "file-document-edit"
        on_release: app.edit_doc(root.uid)

    MDLabel:
        size_hint_x: 0.3
        text: root.title
        bold: True
        font_size: 17

    MDLabel:
        size_hint_x: 0.7
        text: root.desc
