<DocEditView>:
    text_edit: text_edit
    toolbar: toolbar

    text: ""

    orientation: 'vertical'
    text_edit: text_edit
    canvas.before:
        Clear:
        Color:
            rgba: (.9, .9, .9, 1)  # app.theme_cls.bg_light  # doesn't work
        Rectangle:
            pos: self.pos
            size: self.size

    NativoToolbar:
        id: toolbar
        left_action_items: [['menu', lambda x: root.nav_drawer.set_state("open")]]
        right_action_items: [['link-variant', lambda x: print('Not implemented yet'), 'Link Word']]

    TextEdit:
        id: text_edit
        on_active_widget: root.on_active_widget(self.active_widget)