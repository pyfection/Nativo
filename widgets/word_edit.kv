<WordEdit>:
    word: word
    desc: desc

    orientation: "vertical"

    MDBoxLayout:
        MDTextField:
            id: word
            hint_text: "Word"
            write_tab: False
            disabled: not app.authenticated
            on_text: # find similar words and activate warn_suggestions if similar words found
        MDIconButton:
            id: warn_suggestions
            icon: "" if self.disabled else "car-brake-alert"
            disabled: True
            on_press: root.show_word_suggestions()

    MDTextField:
        id: desc
        hint_text: "Description"
        write_tab: False
        disabled: not app.authenticated

    MDBoxLayout:
        orientation: "vertical"

        MDRaisedButton:
            id: confirm_button
            size_hint_x: 1
            text: "Create"
            disabled: not app.authenticated
            on_press: root.save()

        MDRaisedButton:
            id: draft_button
            size_hint_x: 1
            text: "Draft"
            disabled: not app.authenticated
            on_press: root.draft()
