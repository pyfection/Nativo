<WordEdit>:
    word: word
    lang: lang
    desc: desc
    creator: creator

    orientation: "vertical"

    MDBoxLayout:
        MDTextField:
            id: word
            hint_text: "Word"
            write_tab: False
            disabled: not app.authenticated
            on_text: # find similar words and activate warn_suggestions if similar words found
        MDIconButton:
            id: warn_suggestions
            icon: "" if self.disabled else "car-brake-alert"
            disabled: True
            on_press: root.show_word_suggestions()

    MDDropDownItem:
        id: lang
        lang_uid: None
        text: "Select Language"
        size_hint_x: 1
        on_release: root.lang_selector.open()
        disabled: not app.authenticated

    MDTextField:
        id: desc
        hint_text: "Description"
        write_tab: False
        disabled: not app.authenticated

    MDBoxLayout:
        MDLabel:
            text: "Creator:"
        MDLabel:
            id: creator

    MDRaisedButton:
        size_hint_x: 1
        text: "Create" if root.word_uid else "Update"
        disabled: not app.authenticated
        on_press: root.update()
