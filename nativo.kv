#:import config config

Screen:

    MDNavigationLayout:

        Manager:
            nav_drawer: nav_drawer

            id: manager
            logged_in: False
            on_parent: self.current = "docedit"  # ToDo: remove this


            Screen:
                name: "main"
                MainView:
                    nav_drawer: nav_drawer

            Screen:
                name: "docedit"
                DocEditView:
                    nav_drawer: nav_drawer

        MDNavigationDrawer:
            id: nav_drawer

            BoxLayout:
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"

                AnchorLayout:
                    anchor_x: "left"
                    size_hint_y: None
                    height: avatar.height

                    Image:
                        id: avatar
                        size_hint: None, None
                        size: "56dp", "56dp"
                        source: "data/logo/kivy-icon-256.png"

                MDLabel:
                    text: "KivyMD library"
                    font_style: "Button"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: "kivydevelopment@gmail.com"
                    font_style: "Caption"
                    size_hint_y: None
                    height: self.texture_size[1]

                ScrollView:

                    MDList:
                        OneLineIconListItem:
                            icon: "home"  # ToDo: icons are not displayed
                            text: "Home"
                            on_release:
                                manager.current = 'main'
                                nav_drawer.set_state("close")

                        OneLineIconListItem:
                            icon: "file-document-edit"  # ToDo: icons are not displayed
                            text: "Edit Document"
                            on_release:
                                manager.current = 'docedit'
                                nav_drawer.set_state("close")

<NativoToolbar@MDToolbar>:
    id: toolbar
    pos_hint: {"top": 1}
    title: "Nativo"
    elevation: 10
