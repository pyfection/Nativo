#:import config config

Screen:
    manager: manager
    docedit: docedit
    docview: docview
    wordedit: wordedit

    MDNavigationLayout:

        Manager:
            nav_drawer: nav_drawer

            id: manager
            logged_in: False
            on_parent: self.current = "wordlist"  # ToDo: remove this


            Screen:
                name: "main"
                MainView:
                    nav_drawer: nav_drawer

            Screen:
                name: "doclist"
                DocListView:
                    nav_drawer: nav_drawer

            Screen:
                name: "docedit"
                DocEditView:
                    nav_drawer: nav_drawer
                    id: docedit

            Screen:
                name: "docview"
                DocViewView:
                    nav_drawer: nav_drawer
                    id: docview

            Screen:
                name: "wordlist"
                on_pre_enter: wordlist.load()
                WordListView:
                    nav_drawer: nav_drawer
                    id: wordlist

            Screen:
                name: "wordedit"
                WordEdit:
                    nav_drawer: nav_drawer
                    id: wordedit

        MDNavigationDrawer:
            id: nav_drawer

            BoxLayout:
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"

                AnchorLayout:
                    anchor_x: "left"
                    size_hint_y: None
                    height: avatar.height

                    Image:
                        id: avatar
                        size_hint: None, None
                        size: "56dp", "56dp"
                        source: "data/logo/kivy-icon-256.png"

                MDLabel:
                    text: "Nativo"
                    font_style: "Button"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: "placeholder@gmail.com"
                    font_style: "Caption"
                    size_hint_y: None
                    height: self.texture_size[1]

                ScrollView:

                    MDList:
                        OneLineIconListItem:
                            text: "Home"
                            on_release:
                                manager.current = 'main'
                                nav_drawer.set_state("close")

                            IconLeftWidget:
                                icon: "home"

                        OneLineIconListItem:
                            text: "Documents"
                            on_release:
                                manager.current = 'doclist'
                                nav_drawer.set_state("close")

                            IconLeftWidget:
                                icon: "file-document-multiple"

                        OneLineIconListItem:
                            text: "Words"
                            on_release:
                                manager.current = 'wordlist'
                                nav_drawer.set_state("close")

                            IconLeftWidget:
                                icon: "alphabetical"

<NativoToolbar@MDToolbar>:
    id: toolbar
    pos_hint: {"top": 1}
    title: "Nativo"
    elevation: 10
